    <script type="module">
        document.addEventListener('DOMContentLoaded', () => {
            const menuToggle = document.getElementById('menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');
            const hamburgerIcon = document.getElementById('hamburger-icon');
            const usecaseInput = document.getElementById('usecase-input');
            const generateButton = document.getElementById('generate-button');
            const usecaseOutput = document.getElementById('usecase-output');
            const buttonText = document.getElementById('button-text');
            const loadingSpinner = document.getElementById('loading-spinner');

            menuToggle.addEventListener('click', () => {
                const isOpen = mobileMenu.classList.toggle('-translate-x-full');
                if (isOpen) {
                    mobileMenu.classList.remove('flex');
                    hamburgerIcon.classList.remove('open');
                } else {
                    mobileMenu.classList.add('flex');
                    hamburgerIcon.classList.add('open');
                }
            });

            const geminiApiCall = async (prompt) => {
                const userQuery = `As a professional consultant for a company named CodFleet, which connects skilled workers to tasks, please provide a brief use-case example based on the following industry need: "${prompt}". The response should be formal, corporate-grade, and focus on compliance and scalability.`;
                const systemPrompt = "Act as a world-class workforce infrastructure consultant. Provide a concise, single-paragraph use-case summary of how a company can leverage a compliance-first, secure, and scalable workforce platform. The response should be professional, direct, and avoid any casual language.";
                const apiKey = "";
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

                const maxRetries = 5;
                let retries = 0;
                let response;
                while (retries < maxRetries) {
                    try {
                        response = await fetch(apiUrl, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                contents: [{
                                    parts: [{
                                        text: userQuery
                                    }]
                                }],
                                tools: [{
                                    "google_search": {}
                                }],
                                systemInstruction: {
                                    parts: [{
                                        text: systemPrompt
                                    }]
                                },
                            }),
                        });

                        if (response.status === 429) {
                            retries++;
                            await new Promise(res => setTimeout(res, 2 ** retries * 1000));
                            continue;
                        }

                        if (!response.ok) {
                            console.error(`API Error: ${response.status} ${response.statusText}`);
                            usecaseOutput.textContent = 'Sorry, something went wrong. Please try again later.';
                            usecaseOutput.classList.remove('hidden');
                            return;
                        }
                        break;
                    } catch (error) {
                        console.error('Fetch Error:', error);
                        usecaseOutput.textContent = 'Sorry, something went wrong. Please check your network connection.';
                        usecaseOutput.classList.remove('hidden');
                        return;
                    }
                }

                const result = await response.json();
                const candidate = result.candidates?.[0];

                if (candidate && candidate.content?.parts?.[0]?.text) {
                    let text = candidate.content.parts[0].text;
                    const groundingMetadata = candidate.groundingMetadata;
                    if (groundingMetadata && groundingMetadata.groundingAttributions) {
                        const sources = groundingMetadata.groundingAttributions
                            .map(attribution => ({
                                uri: attribution.web?.uri,
                                title: attribution.web?.title,
                            }))
                            .filter(source => source.uri && source.title);

                        if (sources.length > 0) {
                            text += '\n\nSources:';
                            sources.forEach((source, index) => {
                                text += `\n[${index + 1}] ${source.title} (${source.uri})`;
                            });
                        }
                    }
                    usecaseOutput.textContent = text;
                } else {
                    usecaseOutput.textContent = 'Could not generate a use case. Please try again.';
                }
                usecaseOutput.classList.remove('hidden');
            };

            generateButton.addEventListener('click', async () => {
                const prompt = usecaseInput.value.trim();
                if (prompt === '') {
                    usecaseInput.placeholder = 'Please enter a description...';
                    return;
                }

                buttonText.classList.add('hidden');
                loadingSpinner.classList.remove('hidden');
                generateButton.disabled = true;

                await geminiApiCall(prompt);

                buttonText.classList.remove('hidden');
                loadingSpinner.classList.add('hidden');
                generateButton.disabled = false;
            });
        });
    </script>
</body>

